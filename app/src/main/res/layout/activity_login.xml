<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/gradient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageView"
        android:layout_width="128dp"
        android:layout_height="140dp"
        android:layout_above="@+id/googleButton"
        android:layout_marginBottom="15dp"
        app:srcCompat="@drawable/logo" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/googleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="29dp"
        />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#11000000"
        android:ems="10"
        android:textColorHint="#656d7e"
        android:inputType="textEmailAddress"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:hint="Email"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/email"
        android:layout_alignLeft="@+id/email"
        android:layout_marginTop="19dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:background="#11000000"
        android:ems="10"
        android:textColorHint="#656d7e"
        android:inputType="textPassword"
        android:hint="Password"/>

    <TextView
        android:id="@+id/ShowHidePass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/password"
        android:layout_below="@+id/email"
        android:layout_marginTop="23dp"
        android:layout_marginRight="12dp"
        android:textSize="12sp"
        android:textStyle="bold"
        android:text="SHOW" />

    <Button
        android:id="@+id/confirmButton"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="#cf5a20"
        android:textColor="#dbdae3"
        android:text="Login"/>

    <TextView
        android:id="@+id/registerLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmButton"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        android:text="Don`t you have an account yet? Click here to register!"
        android:textColor="#00c8ff"/>



</RelativeLayout>